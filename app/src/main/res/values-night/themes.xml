<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BrunosRecipes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_green</item>
        <item name="colorPrimaryVariant">#2C2C2C</item>
        <item name="colorOnPrimary">@color/mid_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/mid_gray</item>
        <item name="android:textColor">@color/primaryLightColor2</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>


        <!-- Customize your theme here. -->

    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="ratingBarStyle">@style/Controls.RatingBar</item>
        <item name="colorControlActivated">@color/primaryLightColor2</item>
        <item name="colorControlNormal">@color/mid_gray</item>

    </style>

    <style name="Controls.RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:isIndicator">true</item>
    </style>

    <style name="RatingBarBig" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="ratingBarStyle">@style/Controls.RatingBarBig</item>
        <item name="colorControlActivated">@color/primaryLightColor2</item>
        <item name="colorControlNormal">@color/mid_gray</item>

    </style>

    <style name="Controls.RatingBarBig" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="android:isIndicator">false</item>
    </style>

    <style name="Colors_Widget_MaterialComponents_Chip_Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">#383838</item>
    </style>
</resources>